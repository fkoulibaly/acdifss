{% extends '@Projet/app.html.twig' %}

{% block body %}
    <h1>Institution</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ institution.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ institution.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ institution.adresse }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('institution_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('institution_edit', { 'id': institution.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
